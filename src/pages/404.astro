---
import { getLang } from "@/i18n/utils";
import BaseLayout from "@/layouts/BaseLayout.astro";

const url = Astro.url;
const lang = getLang(url);
const redirectUrl = `/${lang}${url.pathname}`;
// 실제 HTTP 응답 보여줘도 재밌겠다
---

<BaseLayout lang={lang} title="404 Not Found">
  <div class="flex flex-col items-center gap-7 px-6">
    <h1 class="text-4xl font-bold">404 Not Found</h1>
    <p>
      or... <a class="underline" href={redirectUrl}>
        {redirectUrl}
      </a>
    </p>
  </div>
</BaseLayout>
