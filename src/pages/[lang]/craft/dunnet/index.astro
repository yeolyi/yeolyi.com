---
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import BaseLayout from "@/layouts/BaseLayout.astro";

export function getStaticPaths() {
  return [{ params: { lang: "ko" } }];
}
---

<BaseLayout lang="ko">
  <div id="wrap" class="mx-auto flex max-w-xl flex-col gap-4">
    <div
      id="out"
      class="border-border h-[50vh] overflow-y-auto border p-4 font-mono leading-normal"
    >
    </div>
    <div id="bar" class="flex gap-2">
      <Input
        id="cmd"
        placeholder="영어 명령을 입력하세요. 예: help, look, take shovel, w..."
      />
      <Button id="send" type="button">입력</Button>
    </div>
  </div>
  <script>
    import "@/lib/dunnet/dunnet.ts";
  </script>
</BaseLayout>
